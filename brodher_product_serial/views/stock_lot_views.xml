<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_lot_form_view_inherit_sn" model="ir.ui.view">
        <field name="name">stock.lot.form.brodher.sn</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_print_qr_labels" 
                            string="Print QR Label" 
                            type="object" 
                            class="oe_highlight"
                            icon="fa-print"
                            invisible="not sn_type"/>
                </header>
            </xpath>
            
            <xpath expr="//field[@name='name']" position="after">
                <field name="qr_code" widget="image" class="oe_avatar" invisible="not sn_type"/>
            </xpath>
            
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sn_type"/>
                <field name="year_code" readonly="1" invisible="not sn_type"/>
                <field name="sequence_number" readonly="1" invisible="not sn_type"/>
            </xpath>
            
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="sn_status" invisible="not sn_type"/>
                <field name="qc_passed" invisible="not sn_type"/>
                <field name="sn_generated_date" readonly="1" invisible="not sn_type"/>
                <field name="last_sn_move_date" readonly="1" invisible="not sn_type"/>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Move History" name="move_history" invisible="not sn_type">
                    <field name="sn_move_ids" readonly="1">
                        <list>
                            <field name="move_date"/>
                            <field name="move_type"/>
                            <field name="location_src_id"/>
                            <field name="location_dest_id"/>
                            <field name="user_id"/>
                            <field name="picking_id"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//group[@name='main_group']" position="after">
                <group string="Print Information" name="print_info">
                    <field name="is_printed" widget="boolean"/>
                    <field name="print_count"/>
                    <field name="last_print_date"/>
                    <field name="last_print_user"/>
                </group>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Print History" name="print_history">
                    <field name="print_history_ids" nolabel="1">
                        <tree>
                            <field name="print_date"/>
                            <field name="print_user"/>
                            <field name="print_count_at_time" string="Print Ke-"/>
                            <field name="picking_id"/>
                            <field name="notes"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_print_sn_qrcode']" position="after">
                <!-- Print Rekap -->
                <button name="%(brodher_product_serial.action_report_sn_print_rekap)d" 
                        string="ðŸ“Š Print Rekap" 
                        type="action"
                        class="btn-info"
                        invisible="not serial_numbers_generated"
                        help="Print rekap status cetak serial numbers"/>
                
            </xpath>
            
        </field>
    </record>

    <record id="stock_lot_tree_view_inherit_sn" model="ir.ui.view">
        <field name="name">stock.lot.tree.brodher.sn</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sn_type" optional="show"/>
                <field name="sn_status" optional="show"/>
                <field name="qc_passed" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>