<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========================================== -->
    <!-- STOCK MOVE TREE VIEW (Separate Definition) -->
    <!-- ========================================== -->
    <record id="view_move_tree_operations" model="ir.ui.view">
        <field name="name">stock.move.tree.operations</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <list decoration-success="sn_scanned &gt;= sn_needed" 
                  decoration-warning="sn_scanned &gt; 0 and sn_scanned &lt; sn_needed" 
                  decoration-danger="sn_scanned == 0 and sn_needed &gt; 0">
                <field name="product_id" readonly="1"/>
                <field name="product_uom_qty" string="Demand" readonly="1"/>
                <field name="sn_needed" string="SN Needed" readonly="1"/>
                <field name="sn_scanned" string="SN Scanned" readonly="1"/>
                <field name="sn_status" string="Status" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- STOCK PICKING FORM - ADD BUTTONS -->
    <!-- ========================================== -->
    <record id="view_picking_form_generate_sn_buttons" model="ir.ui.view">
        <field name="name">stock.picking.form.generate.sn.buttons</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Generate SN buttons after action_assign -->
            <xpath expr="//button[@name='action_assign']" position="after">
                
                <!-- Generate Serial Numbers Button (HIDDEN for backorder) -->
                <button name="action_generate_serial_numbers" 
                        string="Generate SN" 
                        type="object" 
                        class="btn-primary"
                        invisible="state not in ['confirmed', 'assigned', 'waiting'] or not has_sn_products or backorder_id or picking_type_code == 'internal'"
                        help="Generate serial numbers (must scan after generation)"/>
        
                <!-- Quick Generate All Button (HIDDEN for backorder) -->
                <button name="action_bulk_generate_all" 
                        string="Quick Generate All" 
                        type="object" 
                        class="btn-success"
                        invisible="state not in ['confirmed', 'assigned', 'waiting'] or not has_sn_products or serial_numbers_generated or backorder_id or picking_type_code == 'internal'"
                        confirm="This will automatically generate serial numbers for all products. Continue?"
                        help="Auto-generate all SNs"/>
                
                <!-- Print SN QR Code Button -->
                <button name="action_print_sn_qrcode" 
                        string="Print SN QR" 
                        type="object" 
                        class="btn-info"
                        icon="fa-print"
                        invisible="not serial_numbers_generated or state not in ['confirmed', 'assigned', 'waiting'] or picking_type_code == 'internal'"
                        help="Print QR code labels for generated serial numbers"/>
            </xpath>
            
            <!-- Add Scan SN button before validate -->
            <xpath expr="//button[@name='button_validate']" position="before">
                <button name="action_scan_serial_number" 
                        string="Scan Serial Number" 
                        type="object" 
                        class="btn-warning"
                        invisible="state not in ['assigned', 'confirmed'] or not has_sn_products"
                        help="Scan serial numbers to assign to this transfer"/>
            </xpath>
            
            <!-- Add warning banners at top of sheet -->
            <xpath expr="//sheet" position="before">
                
                <!-- BACKORDER NOTICE (NEW) -->
                <div class="alert alert-info text-center" 
                     role="alert" 
                     invisible="not backorder_id or not has_sn_products">
                    <p class="mb-0">
                        <i class="fa fa-info-circle"/> <strong>üì¶ Backorder Notice</strong><br/>
                        Serial numbers were already generated in <field name="backorder_id" readonly="1" class="oe_inline"/>.<br/>
                        Please use <strong>"Scan Serial Number"</strong> to receive remaining items.
                    </p>
                </div>
                
                <!-- Step 1: Generate SN (HIDDEN for backorder) -->
                <div class="alert alert-warning" 
                     role="alert" 
                     invisible="not has_sn_products or serial_numbers_generated or backorder_id">
                    <p class="mb-0">
                        <strong>‚ö†Ô∏è Step 1:</strong> Generate serial numbers first by clicking 
                        <strong>"Generate SN"</strong> button above.
                    </p>
                </div>
                
                <!-- Step 2: Scan SN -->
                <div class="alert alert-info" 
                     role="alert" 
                     invisible="(not serial_numbers_generated and not backorder_id) or sn_scan_complete">
                    <p class="mb-0">
                        <strong>üì± Step 2:</strong> Scan serial numbers. 
                        Progress: <strong><field name="scanned_sn_count"/> / <field name="generated_sn_count"/></strong> scanned.
                        Remaining: <strong style="color: red;"><field name="sn_remaining"/></strong>
                    </p>
                </div>
                
                <!-- Step 3: Ready to validate -->
                <div class="alert alert-success" 
                     role="alert" 
                     invisible="not sn_scan_complete">
                    <p class="mb-0">
                        <strong>‚úì Step 3:</strong> All serial numbers scanned! 
                        Click <strong>"Validate"</strong> to complete the transfer.
                    </p>
                </div>
            </xpath>
            
            <!-- Add stat buttons -->
            <xpath expr="//div[@name='button_box']" position="inside">
                
                <!-- Generated SNs -->
                <button name="action_view_generated_sns" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-barcode"
                        invisible="not serial_numbers_generated">
                    <field name="generated_sn_count" widget="statinfo" string="Generated SNs"/>
                </button>
                
                <!-- Scanned SNs -->
                <button name="action_view_sn_moves" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-check-square-o"
                        invisible="scanned_sn_count == 0">
                    <field name="scanned_sn_count" widget="statinfo" string="Scanned SNs"/>
                </button>
                
                <!-- Backorder Button (NEW) -->
                <button name="action_view_backorder"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="not backorder_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">View</span>
                        <span class="o_stat_text">Backorder</span>
                    </div>
                </button>
            </xpath>
            
            <!-- Update Operations tab -->
            <xpath expr="//page[@name='operations']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            
            <xpath expr="//page[@name='operations']//field[@name='move_ids_without_package']" position="attributes">
                <attribute name="context">{'tree_view_ref': 'brodher_product_serial.view_move_tree_operations'}</attribute>
            </xpath>
            
            <!-- Add Serial Numbers tab -->
            <xpath expr="//page[@name='operations']" position="after">
                <page string="Serial Numbers" name="serial_numbers" invisible="not has_sn_products">
                    <group>
                        <group string="Generation Status">
                            <field name="serial_numbers_generated" readonly="1"/>
                            <field name="generated_sn_count" readonly="1"/>
                            <field name="backorder_id" readonly="1" invisible="not backorder_id"/>
                        </group>
                        <group string="Scan Status">
                            <field name="scanned_sn_count" readonly="1"/>
                            <field name="sn_remaining" readonly="1"/>
                            <field name="sn_scan_complete" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Product Status">
                        <field name="move_ids_without_package" nolabel="1" context="{'tree_view_ref': 'brodher_product_serial.view_move_tree_operations'}">
                            <list decoration-success="sn_scanned &gt;= sn_needed" 
                                  decoration-warning="sn_scanned &gt; 0 and sn_scanned &lt; sn_needed" 
                                  decoration-danger="sn_needed &gt; 0 and sn_scanned == 0">
                                <field name="product_id"/>
                                <field name="product_uom_qty" string="Demand"/>
                                <field name="sn_needed"/>
                                <field name="sn_scanned"/>
                                <field name="sn_status" widget="badge" 
                                       decoration-success="sn_status == '‚úì Complete'"
                                       decoration-warning="'‚ö†' in sn_status"
                                       decoration-danger="'‚úó' in sn_status"/>
                            </list>
                        </field>
                    </group>
                    
                    <group string="Generated Serial Numbers" invisible="not serial_numbers_generated">
                        <div class="alert alert-info">
                            <p><strong>Total Generated:</strong> <field name="generated_sn_count" readonly="1"/> serial numbers</p>
                            <p>Click <strong>"Generated SNs"</strong> stat button to view list.</p>
                        </div>
                    </group>
                    
                    <group string="Scanned Serial Numbers" invisible="scanned_sn_count == 0">
                        <field name="sn_move_ids" nolabel="1">
                            <list>
                                <field name="serial_number_name"/>
                                <field name="product_tmpl_id"/>
                                <field name="move_date"/>
                                <field name="user_id"/>
                                <field name="move_type" widget="badge"/>
                            </list>
                        </field>
                    </group>
                    
                    <div class="alert alert-warning" invisible="sn_scan_complete or (not serial_numbers_generated and not backorder_id)">
                        <h5>‚ö†Ô∏è Incomplete Scan</h5>
                        <p>
                            <span invisible="backorder_id">
                                You have generated <strong><field name="generated_sn_count"/></strong> serial numbers, 
                                but only scanned <strong><field name="scanned_sn_count"/></strong>.
                            </span>
                            <span invisible="not backorder_id">
                                This backorder requires <strong><field name="generated_sn_count"/></strong> serial numbers, 
                                but only <strong><field name="scanned_sn_count"/></strong> scanned.
                            </span>
                        </p>
                        <p>
                            <strong>Remaining: <field name="sn_remaining"/></strong>
                        </p>
                        <p>Please scan all serial numbers before validating the transfer.</p>
                    </div>
                </page>
            </xpath>
            
        </field>
    </record>
    
</odoo>