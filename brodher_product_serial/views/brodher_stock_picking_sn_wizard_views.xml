<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_brodher_stock_picking_sn_wizard_form" model="ir.ui.view">
        <field name="name">brodher.stock.picking.sn.wizard.form</field>
        <field name="model">brodher.stock.picking.sn.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Serial Numbers">
                <sheet>
                    <group>
                        <field name="picking_id" invisible="1"/>
                        <field name="picking_name"/>
                        <field name="operation_type"/>
                        <field name="total_products"/>
                        <field name="total_to_generate"/>
                        <field name="can_generate" invisible="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="generate"/>
                                    <field name="product_id"/>
                                    <field name="quantity_in_picking"/>
                                    <field name="quantity_existing"/>
                                    <field name="quantity"/>
                                    <field name="sn_type"/>
                                    <field name="preview_sn"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Generate" 
                            name="action_generate_and_close" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>