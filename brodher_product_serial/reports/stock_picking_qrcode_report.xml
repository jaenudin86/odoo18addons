                                    <!-- Product Name -->
                                    <div style="font-weight: bold; font-size: 11px; margin-bottom: 5px; min-height: 30px;">
                                        <t t-esc="sn.product_id.display_name"/>
                                    </div>
                                    
                                    <!-- Serial Number -->
                                    <div style="font-size: 13px; font-weight: bold; color: #007bff; margin-bottom: 5px;">
                                        <t t-esc="sn.name"/>
                                    </div>
                                    
                                    <!-- QR Code -->
                                    <img t-att-src="'/report/barcode/QR/%s' % sn.name" 
                                         style="width: 100px; height: 100px; margin: 5px auto;"/>
                                    
                                    <!-- Move Type Badge -->
                                    <div style="margin-top: 5px;">
                                        <span t-if="sn_move.move_type == 'in'" 
                                              style="padding: 2px 8px; background: #28a745; color: white; border-radius: 3px; font-size: 9px; font-weight: bold;">
                                            ðŸ“¥ INCOMING
                                        </span>
                                        <span t-elif="sn_move.move_type == 'out'" 
                                              style="padding: 2px 8px; background: #dc3545; color: white; border-radius: 3px; font-size: 9px; font-weight: bold;">
                                            ðŸ“¤ OUTGOING
                                        </span>
                                    </div>
                                    
                                    <!-- Type Badge -->
                                    <div style="margin-top: 3px; font-size: 9px;">
                                        <span t-if="sn.sn_type == 'M'" 
                                              style="padding: 2px 6px; background: #007bff; color: white; border-radius: 3px;">
                                            MAN
                                        </span>
                                        <span t-elif="sn.sn_type == 'W'" 
                                              style="padding: 2px 6px; background: #e83e8c; color: white; border-radius: 3px;">
                                            WOMAN
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top: 30px; padding-top: 15px; border-top: 1px solid #ddd; text-align: center; font-size: 10px; color: #666;">
                        <p>Generated on: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>