<odoo>
    <record id="action_report_product_qrcode_label" model="ir.actions.report">
        <field name="name">Product QR Code Labels</field>
        <field name="model">product.qrcode.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">brodher_product_serial.product_qrcode_label_template</field>
        <field name="report_file">brodher_product_serial.product_qrcode_label_template</field>
        <field name="paperformat_id" ref="brodher_product_serial.paperformat_product_qrcode_label_a4"/>
        <field name="print_report_name">'QR_Labels_%s' % (time.strftime('%Y%m%d_%H%M%S'))</field>
    </record>

