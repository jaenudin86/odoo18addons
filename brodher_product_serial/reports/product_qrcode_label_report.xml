    <!-- Add Print QR Labels button to product.template form view -->
    <record id="product_template_form_view_qrcode_button" model="ir.ui.view">
        <field name="name">product.template.form.qrcode.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add button after existing header buttons -->
            <xpath expr="//header" position="inside">
                <button name="%(brodher_product_serial.action_product_template_qrcode_label_wizard)d" 
                        string="Print QR Labels" 
                        type="action" 
                        class="oe_highlight"
                        invisible="is_article == 'no'"/>
            </xpath>
        </field>
    </record>
