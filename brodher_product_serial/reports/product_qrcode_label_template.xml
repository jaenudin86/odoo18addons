<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_qrcode_label_template">
        <t t-call="web.basic_layout">
            <div class="page" style="padding: 0;">
                <style>
                    body {
                        margin-top: 5mm !important;
                    }
                    .page {
                        padding: 0;
                        margin: 0;
                        margin-top: -10mm;
                    }
                    .qrcode_container {
                        width: 33.33%;
                        float: left;
                        padding: 5px 3px;
                        box-sizing: border-box;
                        text-align: center;
                        overflow: hidden;
                        height: 140px;
                        font-size: 13px;
                        line-height: 1.1;
                    }
                    .qrcode_img {
                        width: 85px;
                        height: 85px;
                        display: block;
                        margin: 2px auto;
                    }
                    .internal_ref {
                        height: 30px;
                        display: block;
                        margin-top: 10px;
                        font-size: 14px;
                    }
                    .clearfix::after {
                        content: "";
                        display: table;
                        clear: both;
                    }
                </style>

                <div class="clearfix">
                    <t t-foreach="label_data" t-as="label">
                            <div class="qrcode_container">
                <span class="internal_ref">
                    <strong>
                        <t t-esc="label['ir_number']"/>
                    </strong>
                    <br/>
                    <t t-esc="label['name']"/>
                    <t t-if="label['variant']">
                        <br/>
                        <t t-esc="label['variant']"/>
                    </t>
                    <br/>
                    <t t-esc="label['barcode']"/>
                </span>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>