<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Wizard Form View -->
    <record id="view_product_qrcode_label_wizard" model="ir.ui.view">
        <field name="name">product.qrcode.label.wizard.form</field>
        <field name="model">product.qrcode.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print QR Code Labels">
                <group>
                    <group>
                        <field name="product_tmpl_id" invisible="1"/>
                        <field name="product_ids" 
                               widget="many2many_tags" 
                               string="Products/Variants"
                               readonly="1"/>
                    </group>
                    <group>
                        <field name="variant_ids" 
                               widget="many2many_tags"
                               string="Select Variants"
                               domain="[('product_tmpl_id', '=', product_tmpl_id)]"
                               invisible="not product_tmpl_id"
                               options="{'no_create': True}"/>
                        <field name="quantity" required="1"/>
                    </group>
                </group>
                
                <group>
                    <div class="alert alert-info" invisible="not product_tmpl_id">
                        <strong>ℹ️ Info:</strong>
                        <p class="mb-0">
                            Jika tidak ada variant yang dipilih, semua variant akan dicetak.
                        </p>
                    </div>
                </group>
                
                <footer>
                    <button name="action_print_labels" 
                            string="Print Labels" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action to open wizard from product.product -->
    <record id="action_product_qrcode_label_wizard" model="ir.actions.act_window">
        <field name="name">Print QR Code Labels</field>
        <field name="res_model">product.qrcode.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">action</field>
    </record>
    
    <!-- Action to open wizard from product.template -->
    <record id="action_product_template_qrcode_label_wizard" model="ir.actions.act_window">
        <field name="name">Print QR Code Labels</field>
        <field name="res_model">product.qrcode.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_type">action</field>
    </record>
    
</odoo>