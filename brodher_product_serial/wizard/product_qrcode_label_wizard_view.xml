<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Wizard Form View -->
    <record id="view_product_qrcode_label_wizard" model="ir.ui.view">
        <field name="name">product.qrcode.label.wizard.form</field>
        <field name="model">product.qrcode.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print QR Code Labels">
                <sheet>
                    <div class="oe_title">
                        <h1><i class="fa fa-qrcode"/> Print QR Code Labels</h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="product_ids" 
                                   widget="many2many_tags" 
                                   string="Products"
                                   readonly="1"/>
                        </group>
                        <group>
                            <field name="quantity" required="1"/>
                            <field name="total_labels" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Variant Selection (only show if from template with multiple variants) -->
                    <group string="Select Variants (Optional)" 
                           invisible="not product_tmpl_id or variant_count &lt;= 1">
                        <field name="variant_count" invisible="1"/>
                        <field name="variant_ids" 
                               widget="many2many_tags"
                               nolabel="1"
                               domain="[('product_tmpl_id', '=', product_tmpl_id)]"
                               options="{'no_create': True}"
                               placeholder="Kosongkan untuk cetak semua variant..."/>
                    </group>
                    
                    <!-- Info Message -->
                    <group>
                        <div class="alert alert-info">
                            <strong>‚ÑπÔ∏è Info:</strong>
                            <ul class="mb-0">
                                <li invisible="not product_tmpl_id or variant_count &lt;= 1">
                                    Jika tidak ada variant yang dipilih, semua <strong><field name="variant_count" class="oe_inline"/></strong> variant akan dicetak.
                                </li>
                                <li>
                                    Total <strong><field name="total_labels" class="oe_inline"/></strong> label akan dicetak.
                                </li>
                                <li>
                                    Format: 5 kolom per baris, 35 label per halaman.
                                </li>
                            </ul>
                        </div>
                    </group>
                    
                </sheet>
                
                <footer>
                    <button name="action_print_labels" 
                            string="üñ®Ô∏è Print Labels" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action from product.product -->
    <record id="action_product_qrcode_label_wizard" model="ir.actions.act_window">
        <field name="name">Print QR Code Labels</field>
        <field name="res_model">product.qrcode.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">action</field>
    </record>
    
    <!-- Action from product.template -->
    <record id="action_product_template_qrcode_label_wizard" model="ir.actions.act_window">
        <field name="name">Print QR Code Labels</field>
        <field name="res_model">product.qrcode.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_type">action</field>
    </record>
    
</odoo>