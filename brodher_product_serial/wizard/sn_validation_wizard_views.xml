<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_brodher_sn_validation_wizard" model="ir.ui.view">
        <field name="name">brodher.sn.validation.wizard.form</field>
        <field name="model">brodher.sn.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Serial Number Validation">
                <sheet>
                    <!-- Warning Header -->
                    <div class="alert alert-warning" role="alert">
                        <h4><i class="fa fa-exclamation-triangle"/> Incomplete Serial Number Scan</h4>
                        <field name="warning_message" nolabel="1" class="oe_form_text"/>
                    </div>
                    
                    <group>
                        <field name="picking_id" invisible="1"/>
                        <field name="can_create_backorder" invisible="1"/>
                    </group>
                    
                    <!-- Action Selection -->
                    <group string="Choose Action">
                        <field name="action_type" widget="radio" nolabel="1"/>
                    </group>
                    
                    <!-- Scanned SNs Detail (Always Show) -->
                    <notebook>
                        <page string="Scanned Serial Numbers" name="scanned_detail">
                            <field name="scanned_sns_detail" nolabel="1" widget="html"/>
                        </page>
                        
                        <page string="Partial Receipt Details" 
                              name="partial_details" 
                              invisible="action_type != 'partial'">
                            
                            <field name="partial_summary" nolabel="1" widget="html"/>
                            
                            <div class="alert alert-info">
                                <h5><i class="fa fa-info-circle"/> What Will Happen:</h5>
                                <ul>
                                    <li><strong>Current Receipt:</strong> Will be completed with scanned items only</li>
                                    <li><strong>Backorder:</strong> A new transfer will be created for remaining items</li>
                                    <li><strong>Purchase Order:</strong> Will show "Partially Received"</li>
                                    <li><strong>Next Step:</strong> You can receive the backorder items later</li>
                                    <li><strong>Serial Numbers:</strong> Already generated SNs can be used for backorder</li>
                                </ul>
                                
                                <h6 class="mt-3">Example Flow:</h6>
                                <p class="mb-0">
                                    <code>PO: 10 units → Receipt 1: 6 units (done) → Backorder: 4 units (ready) → Later: Receive 4 units → PO: Complete</code>
                                </p>
                            </div>
                        </page>
                        
                        <page string="Force Complete Warning" 
                              name="force_warning" 
                              invisible="action_type != 'force'">
                            <div class="alert alert-danger">
                                <h5><i class="fa fa-exclamation-triangle"/> Danger!</h5>
                                <p>
                                    <strong>Force validation is NOT RECOMMENDED and may cause:</strong>
                                </p>
                                <ul>
                                    <li>Inventory discrepancies</li>
                                    <li>Stock count errors</li>
                                    <li>Missing serial number tracking</li>
                                    <li>Audit trail problems</li>
                                </ul>
                                <p class="mb-0">
                                    <strong>Only use this if you understand the risks!</strong>
                                </p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Confirm" 
                            name="action_confirm" 
                            type="object" 
                            class="btn-primary"
                            confirm="action_type == 'force' ? 'Are you sure you want to force validation? This may cause inventory issues!' : False"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
