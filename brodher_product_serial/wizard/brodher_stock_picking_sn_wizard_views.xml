<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_brodher_stock_picking_sn_wizard_form" model="ir.ui.view">
        <field name="name">brodher.stock.picking.sn.wizard.form</field>
        <field name="model">brodher.stock.picking.sn.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Serial Numbers">
                <sheet>
                    <div class="oe_title">
                        <h1><i class="fa fa-barcode"/> Generate Serial Numbers</h1>
                        <h2><field name="picking_name" readonly="1" class="oe_inline"/></h2>
                    </div>
                    
                    <group>
                        <field name="picking_id" invisible="1"/>
                        <field name="total_sn_to_generate" string="Total to Generate" readonly="1"/>
                    </group>
                    
                    <div class="alert alert-info">
                        <strong>Instructions:</strong> Edit "To Generate" column to set quantity per product
                    </div>
                    
                    <!-- Editable Lines -->
                    <field name="line_ids" nolabel="1">
                        <tree editable="bottom" decoration-success="quantity &gt; 0" decoration-muted="quantity == 0">
                            <field name="product_name" readonly="1"/>
                            <field name="quantity_in_picking" string="Demand" readonly="1"/>
                            <field name="quantity_existing" string="Already" readonly="1"/>
                            <field name="quantity" string="To Generate"/>
                            <field name="sn_type" widget="badge" readonly="1"/>
                            <field name="product_id" column_invisible="1"/>
                        </tree>
                    </field>
                    
                    <!-- Summary -->
                    <group string="Summary">
                        <field name="move_summary" nolabel="1" widget="html"/>
                    </group>
                </sheet>
                
                <footer>
                    <button string="Generate" 
                            name="action_generate_and_close" 
                            type="object" 
                            class="btn-primary"
                            invisible="total_sn_to_generate == 0"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>