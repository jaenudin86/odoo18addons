<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_brodher_stock_picking_sn_wizard_form" model="ir.ui.view">
        <field name="name">brodher.stock.picking.sn.wizard.form</field>
        <field name="model">brodher.stock.picking.sn.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Serial Numbers">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <i class="fa fa-barcode"/> Generate Serial Numbers
                        </h1>
                        <h2>
                            <field name="picking_name" readonly="1" class="oe_inline"/>
                        </h2>
                    </div>
                    
                    <group>
                        <field name="picking_id" invisible="1"/>
                        <field name="total_sn_to_generate" string="Total SNs to Generate" readonly="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Products" name="products">
                            
                            <!-- Editable Product List -->
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_name" readonly="1"/>
                                    <field name="quantity_in_picking" string="Demand" readonly="1"/>
                                    <field name="quantity_existing" string="Already Gen" readonly="1"/>
                                    <field name="quantity" string="To Generate" 
                                           decoration-danger="quantity &gt; (quantity_in_picking - quantity_existing)"
                                           decoration-success="quantity &gt; 0 and quantity &lt;= (quantity_in_picking - quantity_existing)"/>
                                    <field name="sn_type" widget="badge" readonly="1"/>
                                    <field name="product_id" invisible="1"/>
                                </tree>
                            </field>
                            
                            <div class="alert alert-info mt-3">
                                <h5><i class="fa fa-info-circle"/> Instructions</h5>
                                <ul>
                                    <li>Edit <strong>"To Generate"</strong> column to set how many SNs to create</li>
                                    <li>You can generate less than demand (partial generation)</li>
                                    <li>Already generated SNs will not be recreated</li>
                                    <li>SN Type (Man/Woman) is auto-detected from product</li>
                                </ul>
                            </div>
                            
                            <!-- Summary Preview -->
                            <group string="Summary">
                                <field name="move_summary" nolabel="1" widget="html"/>
                            </group>
                        </page>
                        
                        <page string="Instructions" name="instructions">
                            <div class="alert alert-info">
                                <h4><i class="fa fa-lightbulb-o"/> How It Works</h4>
                                <ol>
                                    <li><strong>Edit Quantity:</strong> Set how many SNs to generate per product</li>
                                    <li><strong>Generate:</strong> Click button below to create SNs</li>
                                    <li><strong>Scan:</strong> Use "Scan Serial Number" to assign SNs to transfer</li>
                                    <li><strong>Validate:</strong> Complete transfer after all needed SNs are scanned</li>
                                </ol>
                                
                                <h5 class="mt-3">Example Scenarios:</h5>
                                <p><strong>Full Generation:</strong></p>
                                <p>Demand: 10 → Generate: 10 → All at once</p>
                                
                                <p><strong>Partial Generation:</strong></p>
                                <p>Demand: 10 → Generate: 5 → Later: Generate 5 more</p>
                                
                                <h5 class="mt-3">Serial Number Format:</h5>
                                <p><code>PF + Year(2) + Type(M/W) + Sequence(7 digits)</code></p>
                                <p><strong>Example:</strong> <code>PF26M0001234</code></p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Generate Serial Numbers" 
                            name="action_generate_and_close" 
                            type="object" 
                            class="btn-primary"
                            invisible="total_sn_to_generate == 0"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
