<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_sn_wizard_form" model="ir.ui.view">
        <field name="name">stock.picking.sn.wizard.form</field>
        <field name="model">stock.picking.sn.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Serial Numbers">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="picking_id" readonly="1" class="oe_inline"/>
                        </h1>
                    </div>
                    
                    <group>
                        <field name="operation_type" readonly="1"/>
                        <field name="total_to_generate"/>
                        <field name="can_generate" invisible="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Products">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="generate" widget="boolean_toggle"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="quantity"/>
                                    <field name="sn_type"/>
                                    <field name="preview_sn" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Generate" 
                            name="action_generate_and_close" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>