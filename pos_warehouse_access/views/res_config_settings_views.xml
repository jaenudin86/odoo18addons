<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend POS Settings Page (Settings â†’ Point of Sale) -->
        <record id="view_pos_config_settings_user_access" model="ir.ui.view">
            <field name="name">res.config.settings.pos.user.access</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                
                <!-- Add User Access Control setting in PoS Interface section -->
                <xpath expr="//block[@id='pos_interface_section']/setting[@string='Hide pictures in POS']" position="after">
                    <setting string="User Access Control" 
                             help="Restrict which users can access this Point of Sale"
                             groups="point_of_sale.group_pos_manager">
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Allowed Users" for="pos_user_access_ids" class="col-lg-3 o_light_label"/>
                                <field name="pos_user_access_ids" 
                                       widget="many2many_tags" 
                                       options="{'no_create': True}"
                                       placeholder="Select users who can access this POS..."/>
                            </div>
                        </div>
                        <div class="alert alert-info mt-2" role="alert">
                            <strong>Note:</strong> Only users listed here can access this POS. 
                            If empty, all users with POS User role can access. 
                            POS Managers and Administrators always have full access.
                        </div>
                    </setting>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
