                        <field name="division_id" readonly="1"/>
                        <field name="divisi" readonly="1"/>
                    </group>
                    <group>
                        <field name="devisi" readonly="1"/>
                        <field name="department_type" readonly="1" widget="badge" decoration-info="department_type == 'office'" decoration-success="department_type == 'manufacturing'"/>
                        <field name="short_code" readonly="1"/>
                        <field name="sequence_number"/>
                    </group>
