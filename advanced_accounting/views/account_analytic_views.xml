<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Enhanced Analytic Account Form View -->
    <record id="view_account_analytic_account_enhanced_form" model="ir.ui.view">
        <field name="name">account.analytic.account.enhanced.form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="after">
                <group string="Cost Center">
                    <field name="cost_center_id"/>
                </group>
                <group string="Budget Information">
                    <group>
                        <field name="total_budget" widget="monetary"/>
                        <field name="total_spent" widget="monetary"/>
                    </group>
                    <group>
                        <field name="budget_remaining" widget="monetary"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Analytic Line Form View -->
    <record id="view_account_analytic_line_enhanced_form" model="ir.ui.view">
        <field name="name">account.analytic.line.enhanced.form</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="after">
                <field name="cost_center_id"/>
                <field name="budget_id"/>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Analytic Line Tree View -->
    <record id="view_account_analytic_line_enhanced_tree" model="ir.ui.view">
        <field name="name">account.analytic.line.enhanced.tree</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="after">
                <field name="cost_center_id" optional="hide"/>
                <field name="budget_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
