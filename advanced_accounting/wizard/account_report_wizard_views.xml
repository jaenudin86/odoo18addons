<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Wizard Form View -->
    <record id="view_account_report_wizard_form" model="ir.ui.view">
        <field name="name">account.report.wizard.form</field>
        <field name="model">account.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Report">
                <group>
                    <group>
                        <field name="report_type"/>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Report Wizard Action -->
    <record id="action_account_report_wizard" model="ir.actions.act_window">
        <field name="name">Print Report</field>
        <field name="res_model">account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
