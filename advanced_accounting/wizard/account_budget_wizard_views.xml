<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Budget Wizard Form View -->
    <record id="view_account_budget_wizard_form" model="ir.ui.view">
        <field name="name">account.budget.wizard.form</field>
        <field name="model">account.budget.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Budget Lines">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="analytic_account_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_budget" string="Generate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Budget Wizard Action -->
    <record id="action_account_budget_wizard" model="ir.actions.act_window">
        <field name="name">Generate Budget Lines</field>
        <field name="res_model">account.budget.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
