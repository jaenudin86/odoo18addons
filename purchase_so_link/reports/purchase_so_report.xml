<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Purchase SO Report List View -->
    <record id="view_purchase_so_report_list" model="ir.ui.view">
        <field name="name">purchase.so.report.list</field>
        <field name="model">purchase.so.report</field>
        <field name="arch" type="xml">
            <list string="Purchase by Sales Order" create="false" delete="false" edit="false">
                <field name="sale_order_name" string="Sales Order"/>
                <field name="sale_order_date" string="SO Date"/>
                <field name="partner_id" string="Customer"/>
                <field name="sale_user_id" string="Salesperson"/>
                <field name="purchase_order_name" string="Purchase Order"/>
                <field name="purchase_date" string="PO Date"/>
                <field name="purchase_partner_id" string="Vendor"/>
                <field name="sale_amount" string="SO Amount" sum="Total SO Amount" widget="monetary"/>
                <field name="purchase_amount" string="PO Amount" sum="Total PO Amount" widget="monetary"/>
                <field name="state" string="Status"/>
                <field name="company_id" groups="base.group_multi_company" string="Company"/>
            </list>
        </field>
    </record>

    <!-- Purchase SO Report Pivot View -->
    <record id="view_purchase_so_report_pivot" model="ir.ui.view">
        <field name="name">purchase.so.report.pivot</field>
        <field name="model">purchase.so.report</field>
        <field name="arch" type="xml">
            <pivot string="Purchase by Sales Order Analysis">
                <field name="sale_order_name" type="row"/>
                <field name="purchase_order_name" type="row"/>
                <field name="sale_amount" type="measure"/>
                <field name="purchase_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Purchase SO Report Graph View -->
    <record id="view_purchase_so_report_graph" model="ir.ui.view">
        <field name="name">purchase.so.report.graph</field>
        <field name="model">purchase.so.report</field>
        <field name="arch" type="xml">
            <graph string="Purchase by Sales Order Analysis" type="bar">
                <field name="sale_order_name"/>
                <field name="sale_amount" type="measure"/>
                <field name="purchase_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Purchase SO Report Search View -->
    <record id="view_purchase_so_report_search" model="ir.ui.view">
        <field name="name">purchase.so.report.search</field>
        <field name="model">purchase.so.report</field>
        <field name="arch" type="xml">
            <search string="Purchase by Sales Order">
                <field name="sale_order_name" string="Sales Order"/>
                <field name="purchase_order_name" string="Purchase Order"/>
                <field name="partner_id" string="Customer"/>
                <field name="purchase_partner_id" string="Vendor"/>
                <field name="sale_user_id" string="Salesperson"/>
                
                <separator/>
                
                <filter string="Purchase Order" name="confirmed" domain="[('state', '=', 'purchase')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                
                <separator/>
                
                <group expand="0" string="Group By">
                    <filter string="Sales Order" name="group_sale_order" context="{'group_by': 'sale_order_name'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Vendor" name="group_vendor" context="{'group_by': 'purchase_partner_id'}"/>
                    <filter string="Salesperson" name="group_salesperson" context="{'group_by': 'sale_user_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="PO Date" name="group_po_date" context="{'group_by': 'purchase_date'}"/>
                    <filter string="SO Date" name="group_so_date" context="{'group_by': 'sale_order_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Purchase SO Report Action -->
    <record id="action_purchase_so_report" model="ir.actions.act_window">
        <field name="name">Purchase by Sales Order</field>
        <field name="res_model">purchase.so.report</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="search_view_id" ref="view_purchase_so_report_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No purchase orders linked to sales orders found
            </p>
            <p>
                This report shows purchase orders that are linked to sales orders.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_purchase_so_report"
              name="Purchase by SO"
              parent="purchase.menu_purchase_control"
              action="action_purchase_so_report"
              sequence="100"/>

</odoo>