<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================= -->
    <!-- PRODUCT TEMPLATE FORM -->
    <!-- ========================= -->
    <record id="view_product_template_form_article" model="ir.ui.view">
        <field name="name">product.template.form.article</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!-- HIDE PRODUCT TYPE -->
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- FIELD TAMBAHAN -->
            <xpath expr="//field[@name='type']" position="before">
                <!-- <field name="is_article" widget="radio"/> -->
                <field name="is_article" widget="radio"/>
                <field name="brand"/>
            </xpath>

        </field>
    </record>

    <!-- ========================= -->
    <!-- PRODUCT TEMPLATE TREE -->
    <!-- ========================= -->
    <record id="view_product_template_tree_article" model="ir.ui.view">
        <field name="name">product.template.tree.article</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <!-- <field name="is_article"/>
                <field name="is_article"/> -->
                <field name="is_article" widget="radio"/>
                <field name="brand"/>
              
            </xpath>
        </field>
    </record>

    <!-- ========================= -->
    <!-- PRODUCT VARIANT FORM -->
    <!-- ========================= -->
    <record id="view_product_variant_form_article" model="ir.ui.view">
        <field name="name">product.product.form.article</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <!-- HIDE TYPE -->
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='type']" position="after">
                <field name="is_article" widget="radio"/>
                <field name="brand"/>
                <field name="dimension" invisible="is_article != 'no'"/>
                <field name="base_colour" invisible="is_article != 'no'"/>
                <field name="text_colour" invisible="is_article != 'no'"/>
                <field name="ingredients" invisible="is_article != 'yes'"/>
                <field name="Edition" invisible="is_article != 'yes'"/>
                <field name="gross_weight" invisible="is_article != 'yes'"/>
                <field name="net_weight" invisible="is_article != 'yes'"/>
                <field name="net_net_weight" invisible="is_article != 'yes'"/>
    
            </xpath>
            <xpath expr="//field[@name='default_code']" position="replace">
                <field name="default_code" string="PSIT Number" invisible="is_article != 'no'"/>
                <field name="default_code" string="ATC Number" invisible="is_article != 'yes'"/>
            </xpath>

        </field>
    </record>

</odoo>