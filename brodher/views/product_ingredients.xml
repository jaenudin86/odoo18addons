<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Form view untuk Product Template -->
  <record id="view_product_form_ingredients" model="ir.ui.view">
    <field name="name">product.template.ingredients.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <!-- Letakkan setelah field 'type' di tab General -->
      <xpath expr="//field[@name='type']" position="after">
        <field name="is_article"/>
        <field name="brand"/>
        <field name="size"/>
        <field name="ingredients"/>
        <field name="gross_weight"/>
        <field name="net_weight"/>
        <field name="net_net_weight"/>
        <field name="base_colour"/>
        <field name="text_colour"/>
      </xpath>
    </field>
  </record>

  <!-- Tree view untuk Product Template -->
  <record id="view_product_tree_ingredients" model="ir.ui.view">
    <field name="name">product.template.ingredients.tree</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view"/>
    <field name="arch" type="xml">
      <!-- Sisipkan setelah 'name' di tree view -->
      <xpath expr="//field[@name='name']" position="after">
        <field name="is_article" optional="show"/>
        <field name="brand" optional="show"/>
        <field name="size" optional="show"/>
        <field name="ingredients" optional="hide"/>
        <field name="gross_weight" optional="hide"/>
        <field name="net_weight" optional="hide"/>
        <field name="net_net_weight" optional="hide"/>
        <field name="base_colour" optional="hide"/>
        <field name="text_colour" optional="hide"/>
      </xpath>
    </field>
  </record>

  <!-- Form view untuk Product Variant -->
  <record id="view_product_variant_form_ingredients" model="ir.ui.view">
    <field name="name">product.product.ingredients.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <!-- Tambahkan field di form variant -->
      <xpath expr="//field[@name='type']" position="after">
        <field name="is_article"/>
        <field name="brand"/>
        <field name="size"/>
        <field name="ingredients"/>
        <field name="gross_weight"/>
        <field name="net_weight"/>
        <field name="net_net_weight"/>
        <field name="base_colour"/>
        <field name="text_colour"/>
      </xpath>
    </field>
  </record>

  <!-- Tree view untuk Product Variant -->
  <record id="view_product_variant_tree_ingredients" model="ir.ui.view">
    <field name="name">product.product.ingredients.tree</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_product_tree_view"/>
    <field name="arch" type="xml">
      <!-- Sisipkan field di tree view variant -->
      <xpath expr="//field[@name='default_code']" position="after">
        <field name="is_article" optional="show"/>
        <field name="brand" optional="show"/>
        <field name="size" optional="show"/>
        <field name="ingredients" optional="hide"/>
        <field name="gross_weight" optional="hide"/>
        <field name="net_weight" optional="hide"/>
        <field name="net_net_weight" optional="hide"/>
        <field name="base_colour" optional="hide"/>
        <field name="text_colour" optional="hide"/>
      </xpath>
    </field>
  </record>
</odoo>