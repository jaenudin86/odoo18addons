<odoo>
    <template id="stock_picking_qrcode_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <div style="text-align: center; margin-bottom: 20px;">
                    <h3><t t-esc="picking.name"/></h3>
                </div>
                <div style="display: flex; flex-wrap: wrap;">
                    <t t-foreach="picking.move_line_ids" t-as="line">
                        <div style="width: 33%; text-align: center; margin-bottom: 10px;">
                            <strong><t t-esc="line.product_id.display_name"/></strong><br/>
                            <t t-if="line.lot_id">
                                <span><t t-esc="line.lot_id.name"/></span><br/>
                                <img t-att-src="'/report/barcode/?type=QR&amp;value=' + line.lot_id.name + '&amp;width=200&amp;height=200'" 
                                     style="width:100px; height:100px;"/>
                            </t>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
