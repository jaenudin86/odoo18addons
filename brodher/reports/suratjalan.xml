<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Override Report Template untuk Delivery Order -->
        <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
            
            <!-- Replace entire document structure -->
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <!-- Header Section -->
                        <div class="row" style="border-bottom: 3px solid #000; padding-bottom: 10px; margin-bottom: 15px;">
                            <div class="col-3 text-center">
                                <!-- Logo Perusahaan dari Company Settings -->
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" 
                                     style="max-height: 100px; max-width: 150px;" alt="Company Logo"/>
                                <div t-else="" style="border: 2px solid #000; padding: 20px; height: 100px; display: flex; align-items: center; justify-content: center;">
                                    <strong style="font-size: 10pt;">LOGO<br/>PERUSAHAAN</strong>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <!-- Nama Perusahaan dari Company Settings -->
                                <h2 style="margin: 0; font-weight: bold; font-size: 20pt;">
                                    <span t-field="o.company_id.name"/>
                                </h2>
                                <h3 style="margin: 5px 0; font-weight: bold; font-size: 18pt;">DELIVERY ORDER</h3>
                            </div>
                            <div class="col-3">
                                <!-- Empty space for balance -->
                            </div>
                        </div>

                        <!-- Info Section -->
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-6">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 30%;"><strong>NO DO</strong></td>
                                        <td style="width: 5%;">:</td>
                                        <td><span t-field="o.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>DATE</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.scheduled_date" t-options='{"widget": "date"}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>PO NO</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.origin"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 35%;"><strong>DELIVERY TO</strong></td>
                                        <td style="width: 5%;">:</td>
                                        <td><span t-field="o.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="vertical-align: top;"><strong>ADDRESS</strong></td>
                                        <td style="vertical-align: top;">:</td>
                                        <td>
                                            <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Weight Information Row -->
                        <div class="row" style="margin-bottom: 15px; border: 2px solid #000; padding: 10px;">
                            <t t-set="total_gross" t-value="0"/>
                            <t t-set="total_net" t-value="0"/>
                            <t t-set="total_net_net" t-value="0"/>
                            
                            <t t-foreach="o.move_ids_without_package" t-as="move">
                                <!-- Ambil dari variant dulu, kalau tidak ada ambil dari template -->
                                <t t-set="gross" t-value="move.product_id.gross_weight or move.product_id.product_tmpl_id.gross_weight or 0"/>
                                <t t-set="net" t-value="move.product_id.net_weight or move.product_id.product_tmpl_id.net_weight or 0"/>
                                <t t-set="net_net" t-value="move.product_id.net_net_weight or move.product_id.product_tmpl_id.net_net_weight or 0"/>
                                
                                <!-- Kalikan dengan quantity -->
                                <t t-set="total_gross" t-value="total_gross + (gross * move.product_uom_qty)"/>
                                <t t-set="total_net" t-value="total_net + (net * move.product_uom_qty)"/>
                                <t t-set="total_net_net" t-value="total_net_net + (net_net * move.product_uom_qty)"/>
                            </t>
                            
                            <div class="col-4 text-center">
                                <strong style="font-size: 11pt;">GROSS WEIGHT</strong><br/>
                                <span style="font-size: 14pt;"><strong><t t-esc="'%.2f' % total_gross"/> kg</strong></span>
                            </div>
                            <div class="col-4 text-center">
                                <strong style="font-size: 11pt;">NET WEIGHT</strong><br/>
                                <span style="font-size: 14pt;"><strong><t t-esc="'%.2f' % total_net"/> kg</strong></span>
                            </div>
                            <div class="col-4 text-center">
                                <strong style="font-size: 11pt;">NET NET WEIGHT</strong><br/>
                                <span style="font-size: 14pt;"><strong><t t-esc="'%.2f' % total_net_net"/> kg</strong></span>
                            </div>
                        </div>

                        <!-- Product Table dengan Weight Columns -->
                        <table class="table table-bordered" style="border: 2px solid #000; margin-bottom: 15px;">
                            <thead style="background-color: #f0f0f0;">
                                <tr>
                                    <th class="text-center" style="width: 3%; border: 1px solid #000;"><strong>NO</strong></th>
                                    <th class="text-center" style="width: 35%; border: 1px solid #000;"><strong>PRODUCT</strong></th>
                                    <th class="text-center" style="width: 10%; border: 1px solid #000;"><strong>GROSS<br/>WEIGHT<br/>(kg)</strong></th>
                                    <th class="text-center" style="width: 10%; border: 1px solid #000;"><strong>NET<br/>WEIGHT<br/>(kg)</strong></th>
                                    <th class="text-center" style="width: 10%; border: 1px solid #000;"><strong>NET NET<br/>WEIGHT<br/>(kg)</strong></th>
                                    <th class="text-center" style="width: 12%; border: 1px solid #000;"><strong>QTY</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="line_num" t-value="0"/>
                                <tr t-foreach="o.move_ids_without_package" t-as="move">
                                    <t t-set="line_num" t-value="line_num + 1"/>
                                    
                                    <!-- Get data dari variant dulu, kalau tidak ada ambil dari template -->
                                    <t t-set="brand" t-value="move.product_id.brand or move.product_id.product_tmpl_id.brand"/>
                                    <t t-set="size" t-value="move.product_id.size or move.product_id.product_tmpl_id.size"/>
                                    <t t-set="ingredients" t-value="move.product_id.ingredients or move.product_id.product_tmpl_id.ingredients"/>
                                    <t t-set="base_colour" t-value="move.product_id.base_colour or move.product_id.product_tmpl_id.base_colour"/>
                                    <t t-set="text_colour" t-value="move.product_id.text_colour or move.product_id.product_tmpl_id.text_colour"/>
                                    <t t-set="gross_w" t-value="move.product_id.gross_weight or move.product_id.product_tmpl_id.gross_weight or 0"/>
                                    <t t-set="net_w" t-value="move.product_id.net_weight or move.product_id.product_tmpl_id.net_weight or 0"/>
                                    <t t-set="net_net_w" t-value="move.product_id.net_net_weight or move.product_id.product_tmpl_id.net_net_weight or 0"/>
                                    
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding-top: 8px;">
                                        <span t-esc="line_num"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 8px; vertical-align: top;">
                                        <strong><span t-field="move.product_id.display_name"/></strong>
                                        
                                        <!-- Brand & Size -->
                                        <t t-if="brand or size">
                                            <br/>
                                            <span style="font-size: 9pt;">
                                                <t t-if="brand">
                                                    Brand: <span t-esc="brand"/>
                                                </t>
                                                <t t-if="size">
                                                    <t t-if="brand"> | </t>Size: <span t-esc="size"/>
                                                </t>
                                            </span>
                                        </t>
                                        
                                        <!-- Ingredients -->
                                        <t t-if="ingredients">
                                            <br/>
                                            <span style="font-size: 9pt;">
                                                Ingredients: <span t-esc="ingredients"/>
                                            </span>
                                        </t>
                                        
                                        <!-- Colours -->
                                        <t t-if="base_colour or text_colour">
                                            <br/>
                                            <span style="font-size: 9pt;">
                                                <t t-if="base_colour">
                                                    Base Colour: <span t-esc="base_colour"/>
                                                </t>
                                                <t t-if="text_colour">
                                                    <t t-if="base_colour"> | </t>Text Colour: <span t-esc="text_colour"/>
                                                </t>
                                            </span>
                                        </t>
                                    </td>
                                    
                                    <!-- Gross Weight Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding-top: 8px;">
                                        <t t-if="gross_w">
                                            <span t-esc="'%.2f' % gross_w"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    
                                    <!-- Net Weight Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding-top: 8px;">
                                        <t t-if="net_w">
                                            <span t-esc="'%.2f' % net_w"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    
                                    <!-- Net Net Weight Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding-top: 8px;">
                                        <t t-if="net_net_w">
                                            <span t-esc="'%.2f' % net_net_w"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    
                                    <!-- Quantity Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding-top: 8px;">
                                        <span t-field="move.product_uom_qty"/>
                                        <span t-field="move.product_uom" groups="uom.group_uom"/>
                                    </td>
                                </tr>
                                
                                <!-- Empty rows for spacing -->
                                <t t-if="len(o.move_ids_without_package) &lt; 8">
                                    <t t-foreach="range(8 - len(o.move_ids_without_package))" t-as="i">
                                        <tr>
                                            <td style="border: 1px solid #000; height: 35px;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                        </tr>
                                    </t>
                                </t>
                                
                                <!-- Total Row -->
                                <tr style="background-color: #f0f0f0;">
                                    <td colspan="2" class="text-right" style="border: 1px solid #000; padding: 8px;">
                                        <strong>TOTAL</strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong><t t-esc="'%.2f' % total_gross"/></strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong><t t-esc="'%.2f' % total_net"/></strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong><t t-esc="'%.2f' % total_net_net"/></strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong>
                                            <t t-set="total_qty" t-value="sum(o.move_ids_without_package.mapped('product_uom_qty'))"/>
                                            <span t-esc="total_qty"/>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Notes Section -->
                        <div class="row" style="margin-bottom: 15px; page-break-inside: avoid;">
                            <div class="col-12">
                                <div style="border: 2px solid #000; padding: 10px; background-color: #fffacd;">
                                    <p style="margin-bottom: 5px;"><strong>NOTES / CATATAN:</strong></p>
                                    <p style="margin-bottom: 3px; font-size: 9pt;">
                                        <strong>FRAGILE - HANDLE WITH EXTREME CARE</strong><br/>
                                        <em>(BARANG MUDAH PECAH â€“ HARAP TANGANI DENGAN SANGAT HATI-HATI)</em>
                                    </p>
                                    <p style="margin-bottom: 3px; font-size: 9pt;">
                                        <strong>PLEASE CHECK ALL GOODS CAREFULLY BEFORE SHIPMENT AND UPON RECEIPT</strong><br/>
                                        <em>(HARAP PERIKSA SEMUA BARANG DENGAN TELITI SEBELUM PENGIRIMAN DAN SAAT PENERIMAAN)</em>
                                    </p>
                                    <p style="margin-bottom: 0; font-size: 9pt;">
                                        <strong>KINDLY ENSURE ALL FIELDS ARE COMPLETED WITH SIGNATURE, DATE, AND FULL NAME IN EACH COLUMN PROVIDED</strong><br/>
                                        <em>(Mohon pastikan seluruh kolom diisi lengkap dengan tanda tangan, tanggal, dan nama lengkap pada setiap kolom yang tersedia.)</em>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Signature Section -->
                        <div class="row" style="page-break-inside: avoid;">
                            <div class="col-12">
                                <table class="table table-bordered" style="border: 2px solid #000;">
                                    <thead>
                                        <tr style="background-color: #e0e0e0;">
                                            <th class="text-center" style="width: 20%; border: 1px solid #000; padding: 8px;">
                                                <strong>CREATED BY,</strong>
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #000; padding: 8px;">
                                                <strong>APPROVED BY,</strong>
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #000; padding: 8px;">
                                                <strong>CHECKED BY,<br/>WAREHOUSE</strong>
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #000; padding: 8px;">
                                                <strong>WAREHOUSE HEAD</strong>
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #000; padding: 8px;">
                                                <strong>RECEIVED BY,<br/>SECURITY<br/>VENDOR / LOGISTIC<br/>PROVIDER</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="height: 120px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 70px; font-size: 9pt; line-height: 1.8;">
                                                    <p style="margin: 0;">_________________</p>
                                                    <p style="margin: 0;">Name:</p>
                                                    <p style="margin: 0;">Date:</p>
                                                </div>
                                            </td>
                                            <td style="height: 120px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 70px; font-size: 9pt; line-height: 1.8;">
                                                    <p style="margin: 0;">_________________</p>
                                                    <p style="margin: 0;">Name:</p>
                                                    <p style="margin: 0;">Date:</p>
                                                </div>
                                            </td>
                                            <td style="height: 120px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 70px; font-size: 9pt; line-height: 1.8;">
                                                    <p style="margin: 0;">_________________</p>
                                                    <p style="margin: 0;">Name:</p>
                                                    <p style="margin: 0;">Date:</p>
                                                </div>
                                            </td>
                                            <td style="height: 120px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 70px; font-size: 9pt; line-height: 1.8;">
                                                    <p style="margin: 0;">_________________</p>
                                                    <p style="margin: 0;">Name:</p>
                                                    <p style="margin: 0;">Date:</p>
                                                </div>
                                            </td>
                                            <td style="height: 120px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 70px; font-size: 9pt; line-height: 1.8;">
                                                    <p style="margin: 0;">_________________</p>
                                                    <p style="margin: 0;">Name:</p>
                                                    <p style="margin: 0;">Date:</p>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Stamp Section -->
                        <div class="row mt-3">
                            <div class="col-6">
                                <div style="border: 2px dashed #666; padding: 30px; text-align: center; min-height: 100px;">
                                    <strong style="font-size: 14pt; color: #999;">STAMP</strong>
                                </div>
                            </div>
                        </div>

                    </div>
                </t>
            </xpath>
            
        </template>

    </data>
</odoo>