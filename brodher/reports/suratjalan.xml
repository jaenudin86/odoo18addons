<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- INHERIT DELIVERY SLIP -->
    <template id="report_deliveryslip_custom"
              inherit_id="stock.report_deliveryslip_document">

        <!-- ===== RESET ISI REPORT ===== -->
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page">

                <!-- ================= HEADER ================= -->
            <!-- ================= HEADER ================= -->
            <table style="width:100%; margin-bottom:10px;">
                <tr>
                    <!-- LOGO -->
                    <td style="width:20%; text-align:left;">
                        <img t-if="o.company_id.logo"
                            t-att-src="'data:image/png;base64,%s' % o.company_id.logo"
                            style="max-height:80px;"/>
                    </td>

                    <!-- TITLE -->
                    <td style="width:80%; text-align:center;">
                        <strong style="font-size:16px;">
                            <t t-esc="o.company_id.name"/>
                        </strong><br/>
                        <strong style="font-size:14px;">DELIVERY ORDER</strong>
                    </td>
                </tr>
            </table>



                <hr style="border:1px solid black;"/>

                <!-- ================= INFO ================= -->
                <table style="width:100%; font-size:12px; margin-bottom:10px;">
                    <tr>
                        <td style="width:15%;">NO DO</td>
                        <td style="width:35%;">: <span t-field="o.name"/></td>
                        <td style="width:15%;">DELIVERY TO</td>
                        <td style="width:35%;">: <span t-field="o.partner_id.name"/></td>
                    </tr>
                    <tr>
                        <td>DATE</td>
                        <td>: <span t-field="o.scheduled_date"/></td>
                        <td>ADDRESS</td>
                        <td>: <span t-field="o.partner_id.contact_address"/></td>
                    </tr>
                    <tr>
                        <td>PO NO</td>
                        <td>: <span t-field="o.origin"/></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>

                <!-- ================= TABLE ================= -->
                <table style="width:100%; border-collapse:collapse; font-size:12px;"
                       border="1">

                    <thead>
                        <tr style="text-align:center;">
                            <th style="width:5%;">NO</th>
                            <th style="width:35%;">PRODUCT</th>
                            <th style="width:10%;">QTY</th>
                            <th style="width:15%;">GROSS WEIGHT</th>
                            <th style="width:15%;">NET WEIGHT</th>
                            <th style="width:20%;">NET NET WEIGHT</th>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-set="no" t-value="1"/>
                        <t t-foreach="o.move_ids_without_package" t-as="line">
                            <tr>
                                <td style="text-align:center;">
                                    <t t-esc="no"/>
                                    <t t-set="no" t-value="no + 1"/>
                                </td>

                                <!-- PRODUCT + VARIANT -->
                                <td>
                                    <t t-esc="line.product_id.display_name"/>
                                </td>

                                <td style="text-align:center;">
                                    <t t-esc="line.quantity_done"/>
                                </td>

                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </t>

                        <!-- ROW KOSONG (BIAR TINGGI TABEL SAMA) -->
                        <tr style="height:200px;">
                            <td colspan="6"></td>
                        </tr>

                        <!-- TOTAL -->
                        <tr>
                            <td colspan="2" style="text-align:center;"><strong>TOTAL</strong></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>

                    </tbody>
                </table>

                <!-- ================= NOTES ================= -->
                <div style="margin-top:10px; font-size:11px;">
                    <strong style="color:red;">NOTES :</strong>
                    <span style="color:red;">
                        FRAGILE - HANDLE WITH EXTREME CARE
                    </span><br/>

                    <i>(CATATAN)</i>
                    <span style="color:red;">
                        (BARANG MUDAH PECAH â€“ HARAP TANGANI DENGAN SANGAT HATI-HATI)
                    </span><br/><br/>

                    PLEASE CHECK ALL GOODS CAREFULLY BEFORE SHIPMENT AND UPON RECEIPT<br/>
                    <i>(HARAP PERIKSA SEMUA BARANG DENGAN TELITI SEBELUM PENGIRIMAN DAN SAAT PENERIMAAN)</i><br/><br/>

                    KINDLY ENSURE ALL FIELDS ARE COMPLETED WITH SIGNATURE, DATE, AND FULL NAME IN EACH COLUMN PROVIDED<br/>
                    <i>(Mohon pastikan seluruh kolom diisi lengkap dengan tanda tangan, tanggal, dan nama lengkap)</i>
                </div>

                <!-- ================= SIGN ================= -->
                <table style="width:100%; margin-top:20px; font-size:11px;"
                       border="1" cellspacing="0" cellpadding="5">
                    <tr style="text-align:center;">
                        <td>CREATED BY,</td>
                        <td>APPROVED BY,</td>
                        <td>CHECKED BY,</td>
                        <td>RECEIVED BY,</td>
                    </tr>
                    <tr style="height:80px;">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="text-align:center;">STAMP</td>
                    </tr>
                    <tr style="text-align:center;">
                        <td>WAREHOUSE</td>
                        <td>WAREHOUSE HEAD</td>
                        <td>SECURITY</td>
                        <td>VENDOR / LOGISTIC PROVIDER</td>
                    </tr>
                </table>

            </div>
        </xpath>

    </template>

</odoo>