<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Override Report Template untuk Delivery Order -->
        <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
            
            <!-- Replace entire document structure -->
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header Section -->
                        <div class="row" style="border-bottom: 3px solid #000; padding-bottom: 10px; margin-bottom: 15px;">
                            <div class="col-12 text-center">
                                <h3 style="margin: 5px 0; font-weight: bold; font-size: 18pt;">DELIVERY ORDER</h3>
                            </div>
                        </div>

                        <!-- Info Section -->
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-6">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 30%;"><strong>NO DO</strong></td>
                                        <td style="width: 5%;">:</td>
                                        <td><span t-field="o.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>DATE</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.scheduled_date" t-options='{"widget": "date"}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>PO NO</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.origin"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 35%;"><strong>DELIVERY TO</strong></td>
                                        <td style="width: 5%;">:</td>
                                        <td><span t-field="o.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="vertical-align: top;"><strong>ADDRESS</strong></td>
                                        <td style="vertical-align: top;">:</td>
                                        <td>
                                            <t t-if="o.partner_id.street">
                                                <span t-field="o.partner_id.street"/><br/>
                                            </t>
                                            <t t-if="o.partner_id.street2">
                                                <span t-field="o.partner_id.street2"/><br/>
                                            </t>
                                            <t t-if="o.partner_id.city or o.partner_id.state_id or o.partner_id.zip">
                                                <span t-field="o.partner_id.city"/>
                                                <t t-if="o.partner_id.state_id">
                                                    , <span t-field="o.partner_id.state_id.name"/>
                                                </t>
                                                <span t-field="o.partner_id.zip"/>
                                                <br/>
                                            </t>
                                            <t t-if="o.partner_id.country_id">
                                                <span t-field="o.partner_id.country_id.name"/>
                                            </t>
                                        </td>
                                                                            </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Product Table -->
                        <table class="table table-bordered" style="border: 2px solid #000; margin-bottom: 15px;">
                            <thead style="background-color: #f0f0f0;">
                                <tr>
                                    <th class="text-center" style="width: 5%; border: 1px solid #000;"><strong>NO</strong></th>
                                    <th class="text-center" style="width: 45%; border: 1px solid #000;"><strong>PRODUCT</strong></th>
                                    <th class="text-center" style="width: 10%; border: 1px solid #000;"><strong>QTY</strong></th>
                                    <th class="text-center" style="width: 13%; border: 1px solid #000;"><strong>GROSS WEIGHT</strong></th>
                                    <th class="text-center" style="width: 13%; border: 1px solid #000;"><strong>NET WEIGHT</strong></th>
                                    <th class="text-center" style="width: 14%; border: 1px solid #000;"><strong>NET NET WEIGHT</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="line_num" t-value="0"/>
                                <t t-set="total_gross" t-value="0"/>
                                <t t-set="total_net" t-value="0"/>
                                <t t-set="total_net_net" t-value="0"/>
                                
                                <tr t-foreach="o.move_ids_without_package" t-as="move">
                                    <t t-set="line_num" t-value="line_num + 1"/>
                                    
                                    <!-- Get data dari variant dulu, kalau tidak ada ambil dari template -->
                                    <t t-set="brand" t-value="move.product_id.brand or move.product_id.product_tmpl_id.brand"/>
                                    <t t-set="size" t-value="move.product_id.size or move.product_id.product_tmpl_id.size"/>
                                    <t t-set="ingredients" t-value="move.product_id.ingredients or move.product_id.product_tmpl_id.ingredients"/>
                                    <t t-set="base_colour" t-value="move.product_id.base_colour or move.product_id.product_tmpl_id.base_colour"/>
                                    <t t-set="text_colour" t-value="move.product_id.text_colour or move.product_id.product_tmpl_id.text_colour"/>
                                    <t t-set="gross_w" t-value="move.product_id.gross_weight or move.product_id.product_tmpl_id.gross_weight or 0"/>
                                    <t t-set="net_w" t-value="move.product_id.net_weight or move.product_id.product_tmpl_id.net_weight or 0"/>
                                    <t t-set="net_net_w" t-value="move.product_id.net_net_weight or move.product_id.product_tmpl_id.net_net_weight or 0"/>
                                    
                                    <!-- Calculate totals -->
                                    <!-- <t t-set="total_gross" t-value="total_gross"/>
                                    <t t-set="total_net" t-value="total_net"/>
                                    <t t-set="total_net_net" t-value="total_net_net"/> -->
                                    <t t-set="total_gross" t-value="total_gross + (gross_w * qty)"/>
                                    <t t-set="total_net" t-value="total_net + (net_w * qty)"/>
                                    <t t-set="total_net_net" t-value="total_net_net + (net_net_w * qty)"/>
                                    
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding: 8px;">
                                        <span t-esc="line_num"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 8px; vertical-align: top;">
                                        <strong><span t-field="move.product_id.display_name"/></strong>
                                        
                                        <!-- Brand & Size -->
                                        <t t-if="brand or size">
                                            <br/>
                                            <span style="font-size: 9pt;">
                                                <t t-if="brand">
                                                    Brand: <span t-esc="brand"/>
                                                </t>
                                                <t t-if="size">
                                                    <t t-if="brand"> | </t>Size: <span t-esc="size"/>
                                                </t>
                                            </span>
                                        </t>
                                        
                                        <!-- Ingredients -->
                                        <t t-if="ingredients">
                                            <br/>
                                            <span style="font-size: 9pt;">
                                                Ingredients: <span t-esc="ingredients"/>
                                            </span>
                                        </t>
                                        
                                        <!-- Colours -->
                                        <t t-if="base_colour or text_colour">
                                            <br/>
                                            <span style="font-size: 9pt;">
                                                <t t-if="base_colour">
                                                    Base Colour: <span t-esc="base_colour"/>
                                                </t>
                                                <t t-if="text_colour">
                                                    <t t-if="base_colour"> | </t>Text Colour: <span t-esc="text_colour"/>
                                                </t>
                                            </span>
                                        </t>
                                    </td>
                                    
                                    <!-- Quantity Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding: 8px;">
                                        <span t-field="move.product_uom_qty"/>
                                        <span t-field="move.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    
                                    <!-- Gross Weight Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding: 8px;">
                                        <t t-if="gross_w">
                                            <span t-esc="'%.2f' % gross_w"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    
                                    <!-- Net Weight Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding: 8px;">
                                        <t t-if="net_w">
                                            <span t-esc="'%.2f' % net_w"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    
                                    <!-- Net Net Weight Column -->
                                    <td class="text-center" style="border: 1px solid #000; vertical-align: top; padding: 8px;">
                                        <t t-if="net_net_w">
                                            <span t-esc="'%.2f' % net_net_w"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                </tr>
                                
                                <!-- Empty rows for spacing -->
                                <t t-if="len(o.move_ids_without_package) &lt; 10">
                                    <t t-foreach="range(10 - len(o.move_ids_without_package))" t-as="i">
                                        <tr>
                                            <td style="border: 1px solid #000; height: 30px;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                            <td style="border: 1px solid #000;">&#160;</td>
                                        </tr>
                                    </t>
                                </t>
                                
                                <!-- Total Row -->
                                <tr style="background-color: #f0f0f0;">
                                    <td colspan="2" class="text-right" style="border: 1px solid #000; padding: 8px;">
                                        <strong>TOTAL</strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong>
                                            <t t-set="total_qty" t-value="sum(o.move_ids_without_package.mapped('product_uom_qty'))"/>
                                            <span t-esc="total_qty"/>
                                        </strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong><t t-esc="'%.2f' % total_gross"/></strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong><t t-esc="'%.2f' % total_net"/></strong>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000;">
                                        <strong><t t-esc="'%.2f' % total_net_net"/></strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Notes Section - MERAH -->
                        <div class="row" style="margin-bottom: 15px; page-break-inside: avoid;">
                            <div class="col-12">
                                <div style="border: 2px solid #000; padding: 10px;">
                                    <p style="margin-bottom: 5px; color: #CC0000;"><strong>NOTES :</strong></p>
                                    <p style="margin-bottom: 3px; font-size: 9pt; color: #CC0000;">
                                        <strong>FRAGILE - HANDLE WITH EXTREME CARE</strong>
                                    </p>
                                    <p style="margin-bottom: 3px; font-size: 9pt; color: #CC0000;">
                                        <strong><em>(CATATAN)</em></strong>
                                        <strong> (BARANG MUDAH PECAH â€“ HARAP TANGANI DENGAN SANGAT HATI-HATI)</strong>
                                    </p>
                                    <p style="margin-bottom: 3px; font-size: 9pt; color: #CC0000;">
                                        <strong>PLEASE CHECK ALL GOODS CAREFULLY BEFORE SHIPMENT AND UPON RECEIPT</strong>
                                    </p>
                                    <p style="margin-bottom: 3px; font-size: 9pt; color: #CC0000;">
                                        <strong>(HARAP PERIKSA SEMUA BARANG DENGAN TELITI SEBELUM PENGIRIMAN DAN SAAT PENERIMAAN)</strong>
                                    </p>
                                    <p style="margin-bottom: 0; font-size: 9pt; color: #CC0000;">
                                        <strong>KINDLY ENSURE ALL FIELDS ARE COMPLETED WITH SIGNATURE, DATE, AND FULL NAME IN EACH COLUMN PROVIDED</strong>
                                    </p>
                                    <p style="margin-bottom: 0; font-size: 9pt; color: #CC0000;">
                                        <strong>(Mohon pastikan seluruh kolom diisi lengkap dengan tanda tangan, tanggal, dan nama lengkap pada setiap kolom yang tersedia.)</strong>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Signature Section - PERSIS SEPERTI GAMBAR -->
                        <div class="row" style="page-break-inside: avoid;">
                            <div class="col-12">
                                <table class="table table-bordered" style="border: 2px solid #000;">
                                    <thead>
                                        <tr style="background-color: #e0e0e0;">
                                            <th class="text-center" style="width: 25%; border: 1px solid #000; padding: 8px;">
                                                <strong>CREATED BY,</strong>
                                            </th>
                                            <th class="text-center" style="width: 25%; border: 1px solid #000; padding: 8px;">
                                                <strong>APPROVED BY,</strong>
                                            </th>
                                            <th class="text-center" style="width: 25%; border: 1px solid #000; padding: 8px;">
                                                <strong>CHECKED BY,</strong>
                                            </th>
                                            <th class="text-center" style="width: 25%; border: 1px solid #000; padding: 8px;">
                                                <strong>RECEIVED BY,</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="height: 100px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 60px; font-size: 9pt;">
                                                    <p style="margin: 0; border-bottom: 1px solid #000; padding-bottom: 2px;">&#160;</p>
                                                </div>
                                            </td>
                                            <td style="height: 100px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 60px; font-size: 9pt;">
                                                    <p style="margin: 0; border-bottom: 1px solid #000; padding-bottom: 2px;">&#160;</p>
                                                </div>
                                            </td>
                                            <td style="height: 100px; border: 1px solid #000; vertical-align: bottom; padding: 10px;">
                                                <div style="margin-top: 60px; font-size: 9pt;">
                                                    <p style="margin: 0; border-bottom: 1px solid #000; padding-bottom: 2px;">&#160;</p>
                                                </div>
                                            </td>
                                            <td style="height: 100px; border: 1px solid #000; vertical-align: middle; padding: 10px; text-align: center;">
                                                <div style="font-size: 10pt; color: #999;">
                                                    <strong>STAMP</strong>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr style="background-color: #e0e0e0;">
                                            <td class="text-center" style="border: 1px solid #000; padding: 5px;">
                                                <strong>WAREHOUSE</strong>
                                            </td>
                                            <td class="text-center" style="border: 1px solid #000; padding: 5px;">
                                                <strong>WAREHOUSE HEAD</strong>
                                            </td>
                                            <td class="text-center" style="border: 1px solid #000; padding: 5px;">
                                                <strong>SECURITY</strong>
                                            </td>
                                            <td class="text-center" style="border: 1px solid #000; padding: 5px;">
                                                <strong>VENDOR / LOGISTIC PROVIDER</strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </t>
            </xpath>
            
        </template>

    </data>
</odoo>